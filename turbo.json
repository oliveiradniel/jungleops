{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "start:dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "migration:run": {
      "cache": false,
      "persistent": true
    }
  }
}
